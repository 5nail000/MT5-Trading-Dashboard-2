# MT5 Trading Dashboard Configuration
# Copy this file to .env and fill in your actual values

# Database
# DATABASE_PATH=magics.db
# SQLALCHEMY_DATABASE_URL=sqlite:///./mt5_dashboard.db

# Trading settings
# BALANCE_START=10000
# LOCAL_TIMESHIFT=3

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=

# MT5 credentials encryption (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MT5_CRED_KEY=your_fernet_key_here

# Drawdown calculation (requires tick data, can be slow)
# DRAWDOWN_ENABLED=false

# Security
# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# IP whitelist (comma-separated, empty = allow all)
# IP_WHITELIST=192.168.1.100,10.0.0.1
IP_WHITELIST=
